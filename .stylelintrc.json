{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "indentation": null,
        "selector-class-pattern": "^[a-z][a-zA-Z0-9$_-]+$",
        "no-empty-source": null,
        "no-missing-end-of-source-newline": null
    },
    "ignoreFiles": [
        "node_modules/*",
        "dist/*",
        ".parcel-cache/*",
        "future_features/*"
    ]
}
